@model List<string>

<div>

    <div class="row">
        <div class="col-sm-12">

            @if (Model.Count > 0)
            {
                <img src="@Model[0]" style="width: 100%;height:250px;border:2px solid black; cursor: pointer;" id="glavnaSlika" onclick="showGallery()" />
            }
            else
            {
                <img src="images/no_image_available.png" style="width: 100%;height:250px;border:2px solid black; cursor: pointer;" id="glavnaSlika"/>
            }

        </div>
    </div>
    <br />
    <div class="row" style="overflow-y: scroll; max-height:250px;">
        @foreach (var item in Model)
        {
            <div class="col-sm-3">
                <img src="@item" alt="Alternate Text" style="width: 70px; height: 70px;" onmouseover="prikaziSlikuUGlavnomOkviru(@("'"+item+"'"))" />
            </div>
        }
    </div>
</div>

<script>
    function prikaziSlikuUGlavnomOkviru(imgPath) {
        $("#glavnaSlika").attr("src", imgPath);
    }
</script>

