@model List<ABCar.Models.EntityModels.Korisnici.Zaposlenik>
@{
    ViewData["Title"] = "Svi zaposlenici";
}

<div class="card card-5">
    <div class="card-heading">
        <h2 class="title">Prikaz svih zaposlenika</h2>
    </div>
    <div class="card-body">
        <table class="table table-hover" id="dev-table">
            <thead>
                <tr>
                    <th>Ime prezime</th>
                    <th>Adresa</th>
                    <th>Email</th>
                    <th>Telefon</th>
                    <th>Akcija</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ImePrezime</td>
                        <td>@item.Adresa</td>
                        <td>@item.Email</td>
                        <td>@item.Telefon</td>
                        <td>
                            <a class="btn btn-primary" asp-controller="EvidencijaZaposlenika" asp-action="UrediZaposlenika" asp-route-zaposlenikId="@item.Id">Uredi</a>
                            @*<a class="btn btn-danger" asp-controller="EvidencijaZaposlenika" asp-action="ObrisiZaposlenika" asp-route-zaposlenikId="@item.Id">Izbrisi</a>*@

                            @*@Html.ActionLink(
                                "Delete",
                                "ObrisiZaposlenika",
                                new { zaposlenikId = item.Id },
                                    new {@class="btn btn-danger",
                                        onclick = "return confirm('Da li ste sigurni da zelite obrisati zaposlenika?');"
                                    }
                                    )*@

                            <!-- Button trigger modal -->
                            <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#myModal">
                                Obrisi
                            </button>

                            <!-- Modal -->
                            <!-- The Modal -->
                            <div class="modal fade" id="myModal">
                                <div class="modal-dialog modal-dialog-centered">
                                    <div class="modal-content">

                                        <!-- Modal Header -->
                                        <div class="modal-header">
                                            <h4 class="modal-title text-center"><strong>!!!</strong></h4>
                                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                                        </div>

                                        <!-- Modal body -->
                                        <div class="modal-body">
                                            Jeste li sigurni da zelite izbrisati uposlenika?
                                        </div>

                                        <!-- Modal footer -->
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                                            <a class="btn btn-danger" asp-controller="EvidencijaZaposlenika" asp-action="ObrisiZaposlenika" asp-route-zaposlenikId="@item.Id">Izbrisi</a>
                                        </div>

                                    </div>
                                </div>
                            </div>

                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <a class="btn btn-success" asp-controller="EvidencijaZaposlenika" asp-action="DodajNovogZaposlenika">Dodaj</a>

    </div>
</div>


