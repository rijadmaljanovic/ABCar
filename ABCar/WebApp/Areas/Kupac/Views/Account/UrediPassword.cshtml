@model UrediKorisnickiRacunVM


    <div class="card card-5">
        <div class="card-heading">
            <h2 class="title">Postavljanje nove lozinke</h2>
        </div>
        <div class="card-body">
            <form asp-action="UrediPassword" method="post" class="form" role="form">

                <input asp-for="@Model.KorisnickiRacunId" type="hidden" />

                <br />
                <div class="text-danger error"><strong>@ViewBag.Error</strong></div>
                <br />

                <div class="form-group">
                    <label asp-for="@Model.Username"></label>
                    <input asp-for="@Model.Username" class="form-control">
                    <span asp-validation-for="@Model.Username" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.StaraLozinka"></label>
                    <input asp-for="@Model.StaraLozinka" class="form-control">
                    <span asp-validation-for="@Model.StaraLozinka" class="text-danger"></span>
                </div>
                <hr />
                <br />
                <div class="form-group">
                    <label asp-for="@Model.Password"></label>
                    <input asp-for="@Model.Password" class="form-control">
                    <span asp-validation-for="@Model.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Password2"></label>
                    <input asp-for="@Model.Password2" class="form-control">
                    <span asp-validation-for="@Model.Password2" class="text-danger"></span>
                </div>



                <button class="btn btn-success" type="submit">Snimi</button>

            </form>

        </div>

    </div>

