@model ABCar.Models.ViewModels.LoginVM
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>LOGIN</title>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="~/css/login.css" rel="stylesheet" />
    <link href="~/css/card.css" rel="stylesheet" />

</head>
<body>

    <div class="container">
        <br />
        <br />
        <div class="login-form">
            <h2 class="text-center">Log in</h2>
            <form asp-action="Index" method="post">
                <input asp-for="@Model.RequestUrl" type="hidden" />

                <div class="avatar">
                    <img src="~/images/users.png" alt="Avatar">
                </div>
                <div class="form-group">
                    <input asp-for="@Model.Username" class="form-control input-lg" placeholder="Username" required="required" />
                    <br/>
                    <span asp-validation-for="@Model.Username" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="@Model.Password" class="form-control input-lg" placeholder="Password" required="required" />
                    <br/>
                    <span asp-validation-for="@Model.Password" class="text-danger"></span>
                </div>
                <div class="text-danger">@ViewBag.Error</div>
                <div class="form-group clearfix">
                    <label class="pull-left checkbox-inline"> <input asp-for="@Model.RememberMe" type="checkbox" /> Remember me</label>
                    <button type="submit" class="btn btn-primary btn-lg pull-right">Sign in</button>
                </div>
            </form>
            <div class="hint-text">Nemate registrovan profil? <a asp-action="Register">Registruj se</a></div>
        </div>
    </div>
</body>
</html>
